{
	"compilerOptions": {
		"types": ["@cloudflare/workers-types"],
		"lib": ["dom", "dom.iterable", "esnext"],
		"target": "ESNext",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"strictFunctionTypes": false,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noUnusedLocals": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		".next/types/**/*.ts",
		"/worker/*.ts"
	],
	"exclude": ["node_modules"]
}
